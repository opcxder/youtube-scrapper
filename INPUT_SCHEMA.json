{
    "title": "YouTube Scraper Input",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "searchQueries": {
            "title": "Search Queries",
            "type": "array",
            "description": "List of search queries to scrape videos from",
            "editor": "stringList",
            "default": ["trending videos"],
            "items": {
                "type": "string",
                "title": "Search Query",
                "description": "YouTube search query"
            }
        },
        "startUrls": {
            "title": "Start URLs",
            "type": "array",
            "description": "List of YouTube URLs to scrape. Can include search results, video pages, channel pages, or user profile pages.",
            "editor": "requestListSources",
            "default": [],
            "items": {
                "title": "URL",
                "type": "object",
                "editor": "requestListSources",
                "description": "YouTube URL to scrape",
                "properties": {
                    "url": {
                        "title": "URL",
                        "type": "string",
                        "description": "URL to scrape",
                        "editor": "textfield"
                    }
                }
            }
        },
        "maxVideos": {
            "title": "Maximum Videos",
            "type": "integer",
            "description": "Maximum number of videos to scrape from each page",
            "minimum": 1,
            "maximum": 1000,
            "default": 5
        },
        "maxComments": {
            "title": "Maximum Comments",
            "type": "integer",
            "description": "Maximum number of comments to scrape from each video",
            "minimum": 0,
            "maximum": 500,
            "default": 5
        },
        "sortBy": {
            "title": "Sort By",
            "type": "string",
            "description": "How to sort the results",
            "enum": ["popular", "recent"],
            "enumTitles": ["Most Popular", "Most Recent"],
            "default": "popular"
        },
        "useProxy": {
            "title": "Use Proxy",
            "type": "boolean",
            "description": "Whether to use Apify Proxy for scraping",
            "default": false
        }
    },
    "required": []
} 